{
  "expo": {
    "name": "abstinence-challenge",
    "slug": "abstinence-challenge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "packagerOpts": {
      "host": "192.168.1.15"
    },
    "extra": {
      "EXPO_PUBLIC_USE_FIREBASE_EMULATOR": "${EXPO_PUBLIC_USE_FIREBASE_EMULATOR}",
      "EXPO_PUBLIC_EMULATOR_HOST": "${EXPO_PUBLIC_EMULATOR_HOST}",
      "EXPO_PUBLIC_EMULATOR_STORAGE_PORT": "${EXPO_PUBLIC_EMULATOR_STORAGE_PORT}",
      "EXPO_PUBLIC_FORCE_LONG_POLLING": "${EXPO_PUBLIC_FORCE_LONG_POLLING}",
      "EXPO_PUBLIC_DISABLE_FIRESTORE": "${EXPO_PUBLIC_DISABLE_FIRESTORE}",
      "EXPO_PUBLIC_FIREBASE_TIMEOUT": "30000"
    }
  }
}
