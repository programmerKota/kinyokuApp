# DMM API設定
# DMM API設定（AV女優名の大量取得用）
DMM_API_ID=your_dmm_api_id_here
DMM_AFFILIATE_ID=your_dmm_affiliate_id_here

# Firebase設定
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# その他の環境変数
NODE_ENV=development

# Firebase emulator & functions (client)
# エミュレータを使う場合は true に
EXPO_PUBLIC_USE_EMULATOR=false
# Functions を使うか（本番のみ既定で有効。開発では既定で無効）
EXPO_PUBLIC_ENABLE_FUNCTIONS=false
# Functions のリージョン
EXPO_PUBLIC_FIREBASE_FUNCTIONS_REGION=us-central1

# RevenueCat (optional: in-app purchases)
# Prefer platform-specific Public SDK Keys; single key is fallback
EXPO_PUBLIC_RC_IOS_PUBLIC_API_KEY=your_ios_public_sdk_key
EXPO_PUBLIC_RC_ANDROID_PUBLIC_API_KEY=your_android_public_sdk_key
# Optional fallback if you only use one key for both platforms
# EXPO_PUBLIC_RC_API_KEY=your_revenuecat_public_sdk_key
# Offering key used for the penalty purchase flow (must be configured in RevenueCat dashboard)
EXPO_PUBLIC_RC_PENALTY_OFFERING=penalty
# Enable dev fallback to simulate payments without real charge (true/false)
EXPO_PUBLIC_PAYMENTS_DEV_MODE=false

# Feedback email recipient (optional but recommended)
EXPO_PUBLIC_FEEDBACK_EMAIL=you@example.com
